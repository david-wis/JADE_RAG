# Configuration for JADE RAG System
# Copy this file to .env and fill in your values

# AI Provider Configuration
# Choose between "openai" or "ollama"
AI_PROVIDER=ollama

# OpenAI Configuration (if using AI_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# Ollama Configuration (if using AI_PROVIDER=ollama)
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
MODEL_NAME=gpt-oss:20b

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8001

# Notebooks Configuration
NOTEBOOKS_DIR=/app/notebooks